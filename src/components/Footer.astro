---
const base = import.meta.env.BASE_URL.replace(/\/$/, '') || '';
const basePath = base ? `${base}/` : '/';
---

<footer class="footer">
  <div class="footer-inner">
    <p class="footer-name">משה רוט</p>
    <nav class="footer-nav">
      <a href={basePath}>למכירה</a>
      <a href={`${basePath}sketches`}>סקיצות</a>
      <a href={`${basePath}contact`}>צור קשר</a>
      <a href="https://www.instagram.com/mzsrtgzr2/" target="_blank" rel="noopener noreferrer">אינסטגרם</a>
    </nav>
    <p class="footer-copy">© {new Date().getFullYear()}</p>
  </div>
</footer>

<style>
  .footer {
    background: #111;
    color: #fff;
    margin-top: 4rem;
    padding: 4rem 1.5rem;
  }

  .footer-inner {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .footer-name {
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    margin: 0;
  }

  .footer-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .footer-nav a {
    color: #fff;
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    opacity: 0.9;
    transition: opacity 0.2s;
  }

  .footer-nav a:hover {
    opacity: 1;
  }

  .footer-copy {
    font-size: 0.75rem;
    opacity: 0.7;
    margin: 0;
  }

  @media (max-width: 640px) {
    .footer {
      padding: 3rem 1.5rem;
    }

    .footer-inner {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .footer-nav {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
